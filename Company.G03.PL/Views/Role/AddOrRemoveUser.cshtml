@model List<RolesInUserViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var RoleId = TempData["RoleId"];
}


<form asp-action="AddOrRemoveUser" asp-route-Id="@RoleId">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-group p-3">
            <input asp-for="@Model[i].IsSelected" />
            <label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>

            <input asp-for="@Model[i].UserId"  hidden/>
            <input asp-for="@Model[i].UserName" hidden/>
        </div>
    }
        <input type="submit" value="Update" class="btn btn-success"/>
        <a asp-action="Update" asp-route-Id="@RoleId" class="btn btn-light">Cancel</a>
</form>


