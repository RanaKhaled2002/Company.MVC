@model Employee
@{
    ViewData["Title"] = "Details";
}

<h1 class="py-3">Employee Details</h1>
<div>
    <div class="from-group py-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" readonly/>
    </div>

    <div class="from-group py-3">
        <label asp-for="Age" class="form-label"></label>
        <input asp-for="Age" class="form-control" readonly/>
    </div>

    <div class="from-group py-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" readonly/>
    </div>

    <div class="from-group py-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" readonly/>
    </div>

    <div class="from-group py-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" readonly/>
    </div>

    <div class="from-group py-3">
        <label asp-for="Salary" class="form-label"></label>
        <input asp-for="Salary" class="form-control" readonly/>
    </div>

    <div class="from-group py-3">
        <label asp-for="IsActive" class="form-label"></label>
        <input asp-for="IsActive" class="form-check" readonly/>
    </div>

    <div class="from-group py-3">
        <label asp-for="HiringDate" class="form-label"></label>
        <input asp-for="HiringDate" class="form-control" readonly/>
    </div>

    <div class="py-3">
        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-light">Back To List</a>
    </div>
</div>
